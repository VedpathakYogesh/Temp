@using DPTS.Web.Models;
@using Microsoft.AspNet.Identity
@{ 
    string FirstName = string.Empty;
    var context = new ApplicationDbContext();
    if (!string.IsNullOrEmpty(User.Identity.Name))
    {
        var user = context.Users.SingleOrDefault(u => u.UserName == User.Identity.Name);
        FirstName = string.Concat(new string[] { user.FirstName });
    }
}
<div class="doc-menu">
    <ul class="tg-login-logout">
            @if (Request.IsAuthenticated)
            {
                    <li class="session-user-info">
                        <a href="javascript:;"><span class="s-user">@FirstName</span><img alt="Welcome" src="https://themographics.com/wordpress/docdirect/wp-content/uploads/2016/12/ComingSoon-150x150.jpg"></a>
                        <ul>
                            <li class="active"><a href="#"><i class="fa fa-line-chart"></i>Profile</a></li>
                            <li class=""><a href="#"><i class="fa fa-gears"></i>Profile Settings</a></li>
                            <li class=""><a href="#"><i class="fa fa-money"></i>Invoices &amp; Packages</a></li>
                            <li class=""><a href="#"><i class="fa fa-list"></i>My Schedules</a></li>
                            <li class=""><a href="#"><i class="fa fa-book"></i>Booking Listings</a></li>
                            <li class=""><a href="#"><i class="fa fa-calendar-check-o"></i>Booking Schedules</a></li>
                            <li class=""><a href="#"><i class="fa fa-cog"></i>Booking Settings</a></li>
                            <li class=""><a href="#"><i class="fa fa-lock"></i>Security Settings</a></li>
                            <li class=""><a href="#"><i class="fa fa-eye"></i>Privacy Settings</a></li>
                            <li>
                                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                {
                                   @Html.AntiForgeryToken()
                                   <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-in"></i>Logout</a>
                                }
                            </li>
                        </ul>
                    </li>
            }
            else
            {
                <li class="session-user-info">
                    <a href="@Url.Action("CallLoginRegister","Account")"><span class="s-user" style="display:block">Login/Register</span><img alt="Login" src="~/Content/wp-content/themes/docdirect/images/singin_icon.png"></a>
                </li>
            }
        </ul>
    </div>